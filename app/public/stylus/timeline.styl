.tl
	background #dadada
	color black
	font-family arial,tahoma,sans-serif
	font-size 12px
	height 555px
	line-height 1.3
	margin 0
	min-width 960px
	overflow hidden
	padding 20px 0 0 0
	position relative
	width 100%

	.month, .post
		position absolute 

	.line
		background none repeat scroll 0 0 rgba(241, 241, 241, 1)
		height 370px
		padding 28px 0

		.timeline-buffer
			display none
		
		.timeline-clip
			height 370px
			left 0
			position absolute
			z-index 1

	.post
		padding 3px
		border-bottom 1px solid #d1cbd1
		color white
		


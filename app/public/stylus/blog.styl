.blogAdminPanel
    .preset-container
        .presetInfo
            display none
        .span3
            margin-left 0

.exploreView
    th, td
        text-align left
        padding 10px 15px

    tr
        border-top 1px solid #e9e9e9
        border-bottom 1px solid #e9e9e9

        &:hover
            background #e7f6ff
            border-bottom 1px solid #b2dffc
            border-top 1px solid #b2dffc

            .previewImg
                display block
                position absolute
                bottom 42px
                left 0
                max-width none

        &.active
            background #388ec8
            color white

            .inFolder, .fileName
                color white
        
        .previewCont
            position relative

        .previewImg
            display none
            width 240px !important

        .smallPreviewImg
            width 40px
            margin 0 6px 0 0

        .inFolder
            cursor pointer
            &.off
                display none
            &.on
                display inline-block

        .newName
            &.off
                display none
            &.on
                display inline-block

        .icon
            display inline-block
            margin 0 15px 0 5px
            vertical-align middle
    
    ul
        padding 0
    li
        list-style none
        float left
        margin 0 15px 15px 0
        padding 10px

        &.active
            background #388ec8
            color white

        .iconCont
            text-align center
            max-width 110px
            min-height 90px

        &.folder
            min-width 120px
            text-align center
            border 1px solid #E7E7E7
            background azure

        &.folder.active
            background #388ec8


.pathContainer

    ul
        padding 0
        overflow hidden
        margin-left 0

    li
        float left
        margin 0 7px 0 0
        list-style none
    .arrow
        display inline-block
        margin-left 5px
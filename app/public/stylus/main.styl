body
    background mainColor
    a
        color linkColor
        &:hover
            color linkHoverColor

.main
    background white
    padding 0 0 100px
.separator
    height 120px
    &.mainColorSep
        background mainColor
.main-bg
    position: absolute
    top -99px
    left: 0
    z-index: -1
    height 277px
    overflow hidden

    img
        width 100%
        -webkit-filter: grayscale(100%);

.btn
    display inline-block
    &.off
        display none
.row
	margin-bottom  15px
.field	
	margin-bottom  15px

[class^="title-"] 
	margin-bottom 10px

.title-h1
	font-size 32px
	line-height 34px

.title-h2
	font-size 28px 
	line-height 30px

.title-h3
	font-size 24px
	line-height 26px

.clear
	clear both

.size-big
    width 800px
    margin-left -400px

.mainMenu
	li
		display none

.loginMenu
	float right


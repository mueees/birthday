.twitterPanel
  .list
    li
      list-style none


.tweet
  min-height 90px
  margin 0 0 20px
  padding 15px 20px
  border 1px solid #cff3ff
  border-radius 4px
  background-color #fff

  .number
    float right
    color rgba(51,51,51,0.4)

  .photo
    float left
    display block
    width 73px
    height 73px
    border 4px solid #00aee8
    background-color #fff
    background-position 50% 50%
    background-repeat no-repeat
    border-radius 37.5px
    background-clip padding-box

  .content
    margin 0 0 0 100px

  .info
    span
      a
        color rgba(51,51,51,0.4)
  .text
    padding 4px 0 8px
    font-size 1.1em
    line-height 1.5em
    word-wrap break-word

  .meta
    font-size .9em
    a, span
      opacity .3

  .secondary
    float: left
    a
      text-decoration none

  .icon
    &:hover
      opacity 0.8

  .button
    float: right
    a
      float: left
      margin 0 0 0 15px
      text-decoration none